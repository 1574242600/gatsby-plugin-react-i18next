{
  "name": "gatsby-plugin-react-i18next",
  "version": "0.0.6",
  "description": "Easily translate your Gatsby website into multiple languages",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "author": "Dmitriy Nevzorov",
  "license": "MIT",
  "keywords": [
    "react",
    "gatsby",
    "gatsbyjs",
    "gatsby-plugin",
    "gatsby-component",
    "i18next",
    "react-i18next",
    "gatsby-i18n",
    "i18n"
  ],
  "repository": {
    "url": "https://github.com/microapps/gatsby-plugin-react-i18next"
  },
  "files": [
    "dist",
    "index.js",
    "gatsby-browser.js",
    "gatsby-node.js",
    "gatsby-ssr.js"
  ],
  "scripts": {
    "build:ts": "babel src --out-dir dist --extensions .ts,.tsx --ignore **/*.d.ts",
    "build:defs": "tsc --declaration --outDir dist --emitDeclarationOnly",
    "dev": "babel -w src --out-dir dist --extensions .ts,.tsx --ignore **/*.d.ts",
    "prepare": "NODE_ENV=production yarn run build:ts && yarn run build:defs",
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx,md}'",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@types/bluebird": "^3.5.32",
    "@types/react": "^16.9.35",
    "babel-preset-gatsby-package": "^0.4.2",
    "gatsby": "^2.22.9",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "release-it": "^13.6.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "browser-lang": "^0.1.0",
    "glob": "^7.1.6",
    "i18next": "^19.4.4",
    "react-i18next": "^11.5.0"
  },
  "peerDependencies": {
    "gatsby": "^2.2.0",
    "react": "^16.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "yarn run format"
      ]
    }
  }
}
